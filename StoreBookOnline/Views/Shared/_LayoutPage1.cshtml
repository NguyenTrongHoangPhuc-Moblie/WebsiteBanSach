<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - BookStoreOnline</title>
    <script src="https://kit.fontawesome.com/93c0950cc1.js" crossorigin="anonymous"></script>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.8.3.js"></script>
    <style>
        * {
            box-sizing: border-box;
            font-size: 20px
        }

        body {
            /* background-image: url("/Images/bg_store.jpg");*/
            background-size: cover;
            background-repeat: no-repeat;
            padding: 0px
        }
    </style>
    
</head>
<body class="container-fluid" style="background-color: #D0C4A8">
    <nav class="navbar navbar-expand-sm" style="color: #55331C">
        <div class="container-fluid">
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mynavbar">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse row" id="mynavbar">
                <div class="col-4">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Index", "Home")">Home</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">Dropdown</a>
                            <ul class="dropdown-menu" style="background-color: #9C7F5B">
                                <li><a class="dropdown-item" href="@Url.Action("Index", "Shop")">Trending & Release</a></li>
                                <li><a class="dropdown-item" href="@Url.Action("Categories", "Shop")">Categories</a></li>
                                <li><a class="dropdown-item" href="@Url.Action("Special", "Shop")">Special Offers</a></li>
                            </ul>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Index", "Blog")">Blogs</a>
                        </li>
                    </ul>
                </div>
                <div class="col-4">
                    <div class="navbar-brand text-center">
                        BookStoreOnline
                    </div>
                    @*<a class="navbar-brand" href="#" style="left: 50%; transform: translateX(-50%)">BookStoreOnline</a>*@
                </div>
                <div class="col-4 d-flex" style="justify-content: right; align-content: center">
                    <a href="#" style="color: #55331C;">
                        <i class="fa-solid fa-magnifying-glass" style="margin-right: 20px"></i>
                    </a>
                    <a href="#" style="color: #55331C;">
                        <i class="fa-solid fa-right-to-bracket" style="margin-right: 20px"></i>
                    </a>
                    <a href="#" style="color: #55331C;">
                        <i class="fa-solid fa-heart" style="margin-right: 20px"></i>
                    </a>
                    <a href="@Url.Action("Index", "Cart")" style="color: #55331C;">
                        <i class="fa-solid fa-cart-shopping" style=""><span class="badge bg-secondary rounded-pill" style="font-size: 10px">0</span></i>
                    </a>
                    
                </div>
            </div>
        </div>
    </nav>
    
    <div class="container bg-secondary rounded-bottom-5 rounded-start-5" style="background-image: url('/Images/bg_store.jpg'); background-size: cover;">
        <div class="row">
            <div class="col-9 text-center m-auto">
                <div class="text-light">
                    <h1>Discover the World of Worlds</h1>
                    <p>Journey Through Pages of Adventure, Knowledge, and Inspiration. Find Your Next Favorite Book Here</p>
                </div>
                <button class="btn text-light" style="background-color: #55331C">Shop Now</button>
            </div>
            <div class="col-3 p-4">
                <div id="carouselExample" class="carousel slide">
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <img src="~/Images/book05.jpg" class="d-block rounded-bottom-5 rounded-end-5" alt="..." style="width: 100%; height: 300px">
                        </div>
                        <div class="carousel-item">
                            <img src="~/Images/book06.jpg" class="d-block rounded-bottom-5 rounded-end-5" alt="..." style="width: 100%; height: 300px">
                        </div>
                        <div class="carousel-item">
                            <img src="~/Images/book07.jpg" class="d-block rounded-bottom-5 rounded-end-5" alt="..." style="width: 100%; height: 300px">
                        </div>
                    </div>
                    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExample" data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Previous</span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#carouselExample" data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Next</span>
                    </button>
                </div>
            </div>
        </div>
    </div>

    <div>
        @RenderBody()
    </div>

    <div class="w-100 p-3 mt-5 text-light" style="background-color: #9C7F5B">
        <div class="w-50" style="margin-left: 50%; transform: translateX(-50%)">
            <div>
                <h3 class="text-center">Subscribe To Our Mailing List</h3>
                <p class="text-center">Receive Updates On Promotions. New Products And Events, Directly In Your Inbox</p>
            </div>
            <div>
                <form class="d-flex form-inline my-2 my-lg-0">
                    <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
                    <button class="text-light btn my-2 my-sm-0" style="background-color: #55331C" type="submit">Search</button>
                </form>
            </div>
        </div>
        <div class="row mt-3">
            <div class="col-3 text-center">
                <h5>Categories</h5>
                <p>Humour</p>
                <p>Romance</p>
                <p>History</p>
                <p>Kid</p>
            </div>
            <div class="col-3 text-center">
                <h5>Support</h5>
                <p>FAQ</p>
                <p>Contact Us</p>
                <p>Privacy Policy</p>
                <p>Terms Of Service</p>
            </div>
            <div class="col-3 text-center">
                <h5>Social</h5>
                <p>Facebook</p>
                <p>Twitter</p>
                <p>Instagram</p>
                <div class="d-flex justify-content-evenly" style="font-size: 18px">
                    <i class="fa-brands fa-facebook"></i>
                    <i class="fa-brands fa-square-x-twitter"></i>
                    <i class="fa-brands fa-square-instagram"></i>
                </div>
            </div>
            <div class="col-3 text-center">
                <h5>About</h5>
                <p>Our Stores</p>
                <p>Blogs</p>
                <p>Services</p>
            </div>
        </div>
    </div>
    <script src="~/Scripts/jquery-3.7.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-/bQdsTh/da6pkI1MST/rWKFNjaCP5gBSY4sEBT38Q/9RBh9AH40zEOg7Hlq2THRZ" crossorigin="anonymous"></script>
</body>
</html>
